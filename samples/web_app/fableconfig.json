{
  "sourceMaps": true,
  "projFile": "./src/WebApp.fsproj",
  "outDir": "./out",
  // Add babel-plugin-transform-runtime to optimize the helper
  // functions Babel adds to every file.
  // Don't forget to install also the babel-runtime package.
  "babelPlugins": [ "transform-runtime" ],
  // Rollup configuration to add virtual dom named exports
  "rollup": {
    "dest": "./public/js/bundle.js",
    "plugins": {
      "commonjs": {
        "namedExports": {
          "virtual-dom": [ "h", "create", "diff", "patch" ]
        }
      }
    }
  },
  "targets": {
    "dev": {
      "watch": "src"
    }
  }
}
